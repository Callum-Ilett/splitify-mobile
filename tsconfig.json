{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"react-native/View": ["@/components/ui/Text"]
		},
		"resolveJsonModule": true,
		"types": ["i18next/i18next.d.ts"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"**/*.js",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
